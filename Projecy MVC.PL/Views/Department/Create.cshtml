@model Department ;

@{
    ViewData["Title"] = "Create";
}

<h1>Create Department </h1>

<form asp-action="Create">
    <div>
        <label class="col-form-label" asp-for="Code" ></label>
        <input type="text" asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger" ></span>
    </div>
    <div>
        <label class="col-form-label" asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label class="col-form-label" asp-for="DataOfCreation"></label>
        <input  asp-for="DataOfCreation" class="form-control" />     
    </div>
    <input type="submit" value="Create" class="btn mr-3 btn-primary mt-5" />
    <a asp-action="Index" class="btn btn-light mt-5 "> Back To List </a>
</form>

