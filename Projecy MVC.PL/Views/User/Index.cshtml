@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row justify-content-center align-items-center mt-5 ">
    <form class="row col-8 offset-2" asp-action="Index">

        <div class="col-8">
            <input type="text" class="form-control" name="searchInp" placeholder="Search By Name" />

        </div>
        <div>
            <input type="submit" value="Search" class="btn btn-success" />
        </div>

    </form>
</div>

<h1>All Users</h1>

<br />
<br />

<a asp-controller="User" asp-action="Create" class="btn btn-primary">Create New User </a>

@if (Model.Count() > 0)
{

    <table class=" table table-hover mt-4 table-striped">
        <thead>
            <tr>

                <th>@Html.DisplayNameFor(E => E.Id)</th>
                <th>@Html.DisplayNameFor(E => E.FName)</th>
                <th>@Html.DisplayNameFor(E => E.LName)</th>
                <th>@Html.DisplayNameFor(E => E.Email)</th>
                <th>@Html.DisplayNameFor(E => E.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(E => E.Roles)</th>

                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var User in Model)
            {
                <tr>

                    <td>@Html.DisplayFor(M => User.Id)</td>
                    <td>@Html.DisplayFor(M => User.FName)</td>
                    <td>@Html.DisplayFor(M => User.LName)</td>
                    <td>@Html.DisplayFor(M => User.Email)</td>
                    <td>@Html.DisplayFor(M => User.PhoneNumber)</td>

                    <td>@string.Join(" " ,User.Roles)</td>

                    <partial name="_ButtonsPartial" model="@User.Id"></partial>

                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="mt-5 alert alert-warning">

        <h3>There is not Employees</h3>

    </div>
}


